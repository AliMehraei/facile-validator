{
  "name": "facile-validator",
  "version": "0.2.0",
  "description": "Easy HTML form validator written in TypeScript with tree-shaking",
  "repository": "upjs/facile-validator",
  "homepage": "https://github.com/upjs/facile-validator",
  "license": "MIT",
  "keywords": [
    "javascript",
    "typescript",
    "html",
    "validation",
    "validator",
    "form",
    "form-validation"
  ],
  "author": {
    "name": "Ali Nazari",
    "email": "alinazari.7321@gmail.com"
  },
  "contributors": [
    {
      "name": "Mohammad Saleh Fadaei",
      "email": "ms.fadaei1997@gmail.com",
      "url": "https://twitter.com/ms_fadaei"
    }
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/facile-validator.mjs",
      "require": "./dist/facile-validator.cjs"
    }
  },
  "main": "./dist/facile-validator.umd.js",
  "module": "./dist/facile-validator.es.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "dev": "vite --config ./playground/vite.config.ts",
    "deploy": "vite --config ./playground/vite.config.ts build",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "prepare": "husky install",
    "release": "yarn test && npx standard-version && git push --follow-tags && npm publish"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*": "prettier -w -u"
  },
  "devDependencies": {
    "@types/node": "17.0.17",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jsdom": "19.0.0",
    "lint-staged": "12.3.4",
    "path": "0.12.7",
    "prettier": "2.5.1",
    "standard-version": "9.3.2",
    "typescript": "4.6.2",
    "vite": "2.8.6",
    "vitest": "0.5.9"
  }
}

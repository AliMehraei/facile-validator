{
  "name": "easy-html-form-validator",
  "version": "0.2.0",
  "description": "Easy HTML form validator written in TypeScript with tree-shaking",
  "repository": "AliN11/easy-html-form-validator",
  "homepage": "https://github.com/AliN11/easy-html-form-validator",
  "license": "MIT",
  "keywords": [
    "html",
    "from",
    "validation",
    "input",
    "javascript",
    "typescript"
  ],
  "author": {
    "name": "Ali Nazari",
    "email": "alinazari.7321@gmail.com"
  },
  "main": "./dist/validator.umd.js",
  "module": "./dist/validator.es.js",
  "exports": {
    ".": {
      "import": "./dist/validator.es.js",
      "require": "./dist/validator.umd.js"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "dev": "vite --config ./playground/vite.config.ts",
    "deploy": "vite --config ./playground/vite.config.ts build",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "prepare": "husky install",
    "release": "yarn test && npx standard-version && git push --follow-tags && npm publish"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*": "prettier -w -u"
  },
  "devDependencies": {
    "@types/node": "17.0.17",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jsdom": "19.0.0",
    "lint-staged": "12.3.4",
    "path": "0.12.7",
    "prettier": "2.5.1",
    "standard-version": "9.3.2",
    "typescript": "4.5.5",
    "vite": "2.8.2",
    "vitest": "0.3.5"
  }
}
